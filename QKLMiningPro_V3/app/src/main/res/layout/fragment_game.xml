<?xml version="1.0" encoding="utf-8"?>
<com.qkl.online.mining.app.ui.view.VpSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_game_refreshlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_color"
        android:orientation="vertical">

        <View
            android:id="@+id/fragment_game_titleview"
            android:layout_width="1dip"
            android:layout_height="0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:singleLine="true"
            android:text="@string/fragment_game_page_title"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_game_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.qkl.online.mining.app.ui.view.VpSwipeRefreshLayout>