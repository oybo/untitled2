<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="135dip"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:background="@drawable/shape_bule_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="8dip">

    <ImageView
        android:id="@+id/item_startproduct_icon_view"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:scaleType="center" />

    <TextView
        android:id="@+id/item_startproduct_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_startproduct_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp" />

    <View
        style="@style/view_line"
        android:layout_marginTop="10dip" />

    <TextView
        android:id="@+id/item_startproduct_look_txt"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:gravity="center"
        android:text="@string/public_look_txt"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

</LinearLayout>