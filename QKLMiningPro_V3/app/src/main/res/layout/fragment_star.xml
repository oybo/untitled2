<?xml version="1.0" encoding="utf-8"?>
<com.qkl.online.mining.app.ui.view.VpSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_star_refreshlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/planet_bg"
        android:orientation="vertical">

        <View
            android:id="@+id/fragment_star_titleview"
            android:layout_width="1dip"
            android:layout_height="0dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_star_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qkl.online.mining.app.ui.view.CircleImageView
                    android:id="@+id/fragment_star_user_icon"
                    android:layout_width="34dip"
                    android:layout_height="34dip"
                    android:src="@drawable/main_star_defult_head" />

                <TextView
                    android:id="@+id/fragment_star_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="28dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_star_item_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="4dip">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/planet_icon_yun"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/fragment_star_yuntPrice_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/shape_star_item_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="4dip">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/planet_icon_yun"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/fragment_star_yunToYuntRate_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_star_parities_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/shape_star_item_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="4dip">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/planet_icon_yun"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/fragment_star_parities_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_star_myyun_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/shape_star_item_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="4dip">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/planet_icon_yunt"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/fragment_star_myyun_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/fragment_mystar_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="@string/main_star_mysytar_txt"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:padding="10dip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dip">

                <ImageView
                    android:id="@+id/item_my_xingqiu_image"
                    android:layout_width="220dip"
                    android:layout_height="220dip"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/item_wakuang_imageview"
                    android:layout_width="100dip"
                    android:layout_height="120dip"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wakuang_animlist"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_my_xingqiu_info_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dip"
                    android:background="@drawable/shape_star_detail_bg"
                    android:drawableLeft="@drawable/ham"
                    android:drawablePadding="5dip"
                    android:paddingBottom="5dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip"
                    android:text="@string/purchase_star_defult_bt"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/item_my_xingqiu_info_view"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/shape_popview_bg_black"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="10dip">

                        <TextView
                            android:id="@+id/item_my_xingqiu_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_star_jine_txt"
                            android:textColor="@color/color_ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/item_my_xingqiu_suanli_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="@string/order_ljcc_txt"
                            android:textColor="@color/color_ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/item_my_xingqiu_zhuangtai_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="@string/purchase_star_zhuangtai_bt"
                            android:textColor="@color/color_ffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/shape_triangle_black" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_star_canbuy_number_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/public_canbuy_number_txt"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fragment_star_make"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:paddingTop="10dip"
                    android:text="@string/public_star_make_txt"
                    android:textColor="@color/color_FFFF31"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/fragment_star_buy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_popview_bg_black"
            android:orientation="vertical"
            android:paddingBottom="30dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="30dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/userinfo_amount_txt"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="32dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/shape_buy_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fragment_star_order_jine"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="@string/input_int_txt"
                        android:inputType="number"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:singleLine="true"
                        android:textColor="@color/color_666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="YUNT"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_star_orderbuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_buy_bt_bg"
                    android:gravity="center"
                    android:paddingBottom="5dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:paddingTop="5dip"
                    android:text="@string/star_buy_txt"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/star_order_config_finance_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="12dip"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="12dip"
                    android:layout_height="12dip"
                    android:layout_margin="2.5dip"
                    android:src="@drawable/star_gantanhao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="@string/star_tip"
                    android:textColor="@color/color_F3C554"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/star_order_config_finance_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/star_buy_tip"
                    android:textColor="@color/color_F3C554"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.qkl.online.mining.app.ui.view.VpSwipeRefreshLayout>