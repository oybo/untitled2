<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qkl.online.mining.app.ui.view.HeaderView
        android:id="@+id/activity_exchange_headerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.lazy.viewpager.view.indicator.FixedIndicatorView
        android:id="@+id/activity_exchange_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_exchange_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>