<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dip"
        android:background="@drawable/shape_white_bg"
        android:orientation="vertical"
        android:padding="10dip">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/tips_tip_title_txt"
            android:textColor="@color/color_000000"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:fillViewport="true"
            android:minHeight="80dip"
            android:padding="5dip"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:scrollbars="vertical"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#F1F1F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:minHeight="40dip"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/selector_dialog_cancel_bg"
                android:gravity="center"
                android:minWidth="80dip"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="@string/main_cancel"
                android:textColor="@color/color_000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/selector_dialog_ok_bg"
                android:gravity="center"
                android:minWidth="80dip"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="@string/main_confirm"
                android:textColor="@color/color_000000"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>